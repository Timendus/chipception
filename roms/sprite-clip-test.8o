: main
    clear
    v0 := 32
    v1 := 16
    v3 := 0
    draw
    loop
        draw

        v2 := 5
        if v2 key then
            v1 -= 1
        v2 := 7
        if v2 key then
            v0 -= 1
        v2 := 8
        if v2 key then
            v1 += 1
        v2 := 9
        if v2 key then
            v0 += 1
        v2 := 6
        if v2 key begin
            vF := 1
            v3 ^= vF
        end

        draw

        v2 := 2
        delay := v2
        loop
            v2 := delay
            if v2 != 0 then
        again
    again

: draw
    if v3 == 0 begin
        i := 8x8-cursor
        sprite v0 v1 8
    else
        i := 16x16-cursor
        sprite v0 v1 0
    end
    return

: 8x8-cursor
    0b00011000
    0b00111100
    0b01111110
    0b11100111
    0b11100111
    0b01111110
    0b00111100
    0b00011000

: 16x16-cursor
    0b00000011 0b11000000
    0b00000111 0b11100000
    0b00001111 0b11110000
    0b00011111 0b11111000
    0b00111111 0b11111100
    0b01111111 0b11111110
    0b11111110 0b01111111
    0b11111100 0b00111111
    0b11111100 0b00111111
    0b11111110 0b01111111
    0b01111111 0b11111110
    0b00111111 0b11111100
    0b00011111 0b11111000
    0b00001111 0b11110000
    0b00000111 0b11100000
    0b00000011 0b11000000
