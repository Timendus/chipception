:macro make REGa REGb WORD {
    :calc hi { ( WORD >> 8 ) & 0xFF }
    :calc lo { WORD & 0xFF }
    REGa := hi
    REGb := lo
}

:macro set LOCATION WORD {
    make v0 v1 WORD
    i := LOCATION
    save v1
}

# Add (REGa, REGb) as one 16-bit number to the index register (destructive to REGa)
:macro add-to-i REGa REGb {
    loop
        while REGa != 0
        vF := 0xFF
        i += vF
        vF := 1
        i += vF
        REGa -= 1
    again
    i += REGb
}

# Some long-lived registers and their meanings
:alias cycles v8
:alias vfQuirk v9
:alias shiftQuirk vA
:alias memQuirk vB
:alias jumpQuirk vC
:alias dispQuirk vD
:alias clipQuirk vE

# Show the registers in the memory monitor
:monitor v7 "displayMode: %1i\ncycles: %1i\nvfQuirk: %1i\nshiftQuirk: %1i\nmemQuirk: %1i\njumpQuirk: %1i\ndispQuirk: %1i\nclipQuirk: %1i\n"

# A few constants giving meaning to magic values
:const STATE_STOPPED 0
:const STATE_RUNNING 1
:const STATE_WAITING_FOR_INTERRUPT 2
:const STATE_INTERRUPT_TRIGGERED 3

